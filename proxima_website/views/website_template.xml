<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
     <!-- Home of proxima page -->
    <template id="custome_home_proxima" inherit_id="website.default_page" customize_show="True"> 
     <t t-call="website.layout">
        <xpath expr="//div[@class='container text-center o_homepage_editor_welcome_message']" position="replace">
           <div t-name="website.homepage_editor_welcome_message" class="container text-center o_homepage_editor_welcome_message">
               <h2 class="mt0">Ta maman salaud pourquoi tu deranges!</h2>
               <p class="lead d-none d-md-block">Let's start designing.</p>
          </div>
        </xpath>
     </t>
    </template>


