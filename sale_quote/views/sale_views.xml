<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sale_order_quote" model="ir.ui.view">
        <field name="name">sale.order.quote</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_quotation_send']" position="after">
                <button name="action_quotation_send_price" string="Envoyer Devis Sans Prix" type="object" states="draft" class="btn-primary"/> 
            </xpath>
            <field name="partner_id" position="after">
                 <field name="is_lead"/>
            </field>
        </field>
    </record>

</odoo>